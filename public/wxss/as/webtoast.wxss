/**toast.wxss**/
.wetoast {
  display: none;
}
.wetoast_show {
  display: block;
}
.wetoast__mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
}
.wetoast__bd {
  opacity: 0;
  display: flex;
  flex-direction: column;
  position: fixed;
  z-index: 5000;
  min-width: 40vw;
  min-height: 100rpx;
  max-width: 80%;
  top: 55%;
  left: 50%;
  max-width: 80vw;
  transform: translateX(-50%);
  padding: 30rpx;
  box-sizing: border-box;
  background: rgba(40, 40, 40, 0.75);
  border-radius: 5px;
  color: #fff;
  word-wrap: break-word;
  word-break: break-all;
  align-items: center;
  justify-content: space-around;
}
.wetoast__bd__title {
  margin: 3px 0;
  font-size: 30rpx;
  line-height: 1.4em;
}
.wetoast__bd.maxwidth {
  width: 80vw;
}
.wetoast__bd.bottom {
  top: auto;
  bottom: 40px;
  min-height: 4.4em;
}
